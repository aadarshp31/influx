  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "https://localhost:5173",
      "webRoot": "${workspaceFolder}/client"
    },
    {
      "type": "java",
      "name": "Start Server",
      "request": "launch",
      "mainClass": "com.app.server.ServerApplication",
      "projectName": "server",
      "envFile": "${workspaceFolder}/server/.env"
    },
    {
      "type": "java",
      "name": "Run with AppMap",
      "request": "launch",
      "mainClass": "",
      "vmArgs": "-javaagent:${userHome}/.appmap/lib/java/appmap.jar"
    }
  ]
}